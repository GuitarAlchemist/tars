{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "wwwroot/js/dist",
    "rootDir": "wwwroot/js",
    "sourceMap": true,
    "declaration": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "types": ["node"]
  },
  "include": ["wwwroot/js/**/*.ts"],
  "exclude": ["node_modules", "wwwroot/js/dist"]
}